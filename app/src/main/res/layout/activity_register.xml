<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo_register"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/logo"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_username_Rgs"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:textColor="@color/purple"
            android:paddingLeft="20dp"
            android:hint="Name Lengkap"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/et_gmail_Rgs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:textColor="@color/purple"
            android:paddingLeft="20dp"
            android:hint="Gmail"
            android:inputType="textWebEmailAddress"/>

        <EditText
            android:id="@+id/et_password_Rgs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="10dp"
            android:textColor="@color/purple"
            android:paddingLeft="20dp"
            android:hint="Password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/et_nohp_Rgs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:textColor="@color/purple"
            android:paddingLeft="20dp"
            android:hint="No. Handphone"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/et_alamat_Rgs"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_login"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:drawableLeft="@drawable/baseline_add_location_alt_24"
            android:drawablePadding="10dp"
            android:textColor="@color/purple"
            android:paddingLeft="20dp"
            android:hint="Alamat Lengkap"
            android:inputType="text"/>

        <Button
            android:id="@+id/button_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:text="Register"/>

        <ImageView
            android:id="@+id/masuk_dengan_login"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@drawable/img_8"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google_login_Rgs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_5"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/fb_login_Rgs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_6"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/apple_Rgs"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_7"
                android:layout_marginStart="90dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>